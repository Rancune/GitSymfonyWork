<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Blog{% endblock %}</title>
        {% block stylesheets %}<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" /> <!--asset prend comme parametre un chemin direct, depuis le dossier web-->
        <link rel="stylesheet" type="text/css" href="{{ asset('style.css')}}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


        {% if form is defined%}
        {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
        {% endif %}


    </head>
    <body>
<div class="row">
      <div class="col-sm-1" >

              <ul class="nav nav-pills nav-stacked" role="tablist">
              <li class=""> <a href="{{path('article_count')}}">article</a></li>
              <li class=""><a href="{{path('commentaire_total')}}">commentaire</a></li>
              <li class=""><a href="{{path('utilisateur_liste')}}">utilisateur</a></li>
              <li class=""><a href="{{path('categorie_liste')}}">Categorie</a></li>
              </ul>

      </div>

<div class="col-sm-11">
  <div class="container">


          {% for message in app.flashes('info') %}

          <div class="alert alert-info" role="alert">
              {{ message }}
          </div>

          {% endfor %}

          {% for message in app.flashes('erreur') %}

          <div class="alert alert-warning" role="alert">
              {{ message }}
          </div>

          {% endfor %}

          {% block body %}

          {% endblock %}



  </div>

</div>

</div>










        {% block javascripts %}

        <script src="http://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

        <script src="{{ asset('scriptmenu.js')}}"></script>

        <script type="text/javascript">
            $(body).on('click', '.nav li', function() {
            $(".nav li").removeClass("active");
            $(this).addClass("active");
            });
        </script>

        {% endblock %}

    </body>
</html>
