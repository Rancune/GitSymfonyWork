{% extends 'base.html.twig' %}


{% block body %}


  <table class="table">
        {% if categorie is defined %}
      <h1>  Voici la liste des Catégories: </h1>


        <thead>
        <tr>
          <th>ID</th>
          <th>Nom </th>
          <th>Parent </th>
          <th>Actif </th>
        </tr>
        </thead>

      <tbody>

            {% for categorie in categorie %}
            <tr>

                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.actif }}</td>
                <td>
                    {% if categorie.actif == 1 %}
                          <a href="{{path('categorie_suppr', {'id': categorie.id})}}" class='btn btn-danger btn-xs'> Désactiver</a> </td>
                    {% else %}
                          <a href="{{path('categorie_active', {'id': categorie.id})}}" class='btn btn-success btn-xs'> Activer</a> </td>
                    {% endif %}
                <td><a href="{{path('categorie_modif', {'id': categorie.id})}}" class='btn btn-warning btn-xs'> Modifier</a> </td>

            </tr>
            {% endfor %}

        <div>
                    <a href="{{path('categorie_nouveau')}}" class='btn btn-primary'> Ajouter une nouvelle Categorie </a>
        </div>

        {% else %}
        la variable test n'est pas défini.
        {% endif %}

        <tbody>



{% endblock %}






